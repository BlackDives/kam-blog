const linkedInUser = "sir-w";
const year = new Date();
---

<footer>
  <div class="footer-container">
    <div class="subheader-section">
      <p class="footer-subheader">Socials</p>
      <Social platform="github" username="/blackdives" />
      <Social platform="linkedin" username="/in/sir-w" />
    </div>
    <div class="subheader-section">
      <p class="footer-subheader">Navigation</p>
      <a href="/">home</a>
      <a href="/blog">blog</a>
      <a href="/about">about</a>
