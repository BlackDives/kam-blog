<style>
  a {
    padding: 0.5rem 0;
    text-decoration: none;
  }

  .footer-container {
    display: flex;
    flex-direction: row;
    margin-top: 5em;
  }

  .footer-subheader {
    font-weight: bold;
  }

  .subheader-section {
    display: flex;
    flex-direction: column;
    margin-right: 15px;
  }

  .copyright {
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
